{
  "name": "tivra-debugmind",
  "displayName": "Tivra DebugMind",
  "description": "AI debugging copilot for production services. Automatically fetches logs, analyzes errors, performs RCA, and suggests fixes.",
  "version": "0.4.0",
  "publisher": "shreychaturvedi",
  "license": "MIT",
  "icon": "media/logo.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shrey2525/tivra-copilot-vscode"
  },
  "bugs": {
    "url": "https://github.com/shrey2525/tivra-copilot-vscode/issues",
    "email": "info@tivra.ai"
  },
  "homepage": "https://github.com/shrey2525/tivra-copilot-vscode#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "aws",
    "cloudwatch",
    "debugging",
    "ai",
    "copilot",
    "lambda",
    "logs",
    "production",
    "monitoring",
    "error-tracking",
    "rca",
    "root-cause-analysis",
    "ec2",
    "ecs",
    "devops"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tivra.openCopilot",
        "title": "Tivra DebugMind",
        "icon": "$(robot)"
      }
    ],
    "configuration": {
      "title": "Tivra DebugMind",
      "properties": {
        "tivra.apiUrl": {
          "type": "string",
          "default": "https://copilot.tivra.ai",
          "description": "Tivra DebugMind API URL (Production: https://copilot.tivra.ai | Local Dev: http://localhost:3001)"
        },
        "tivra.awsRegion": {
          "type": "string",
          "default": "us-east-1",
          "description": "AWS Region"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
